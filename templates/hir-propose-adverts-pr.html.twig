<style type="text/css">
    .tg {
        border-collapse: collapse;
        border-spacing: 0;
    }

    .tg td {
        font-family: Arial, sans-serif;
        font-size: 14px;
        padding: 10px 5px;
        border-style: solid;
        border-width: 1px;
        overflow: hidden;
        word-break: normal;
        border-color: black;
    }

    .tg th {
        font-family: Arial, sans-serif;
        font-size: 14px;
        font-weight: normal;
        padding: 10px 5px;
        border-style: solid;
        border-width: 1px;
        overflow: hidden;
        word-break: normal;
        border-color: black;
    }

    .tg .tg-0pky {
        border-color: inherit;
        text-align: left;
        vertical-align: top
    }
</style>
<table class="tg">
    <thead>
    <tr>
        <td>
            <img src="{{ protocol ~ 'public://default_images/email_banner.png'|image_style('email_banner') }}"
                 class="templateImage" alt="email_banner">
        </td>
    </tr>
    </thead>
    <tbody>
    <tr>
        <th class="tg-0pky" colspan="2">
            {% set manyAdverts = adverts|length > 1 ? true : false %}
            <h3>Interesting advert{% if manyAdverts %}s{% endif %} from {{ drupal_token('site:name') }}</h3>

            <h4>Dear {{ recipient }}, </h4>

            <p>Following your <a href="{{ drupal_url('node/' ~ prId, {absolute: true}) }}">Property request</a> submitted on our website,
                we would like to draw you attention to the propert{% if manyAdverts %}ies{% else %}y{% endif %} below:</p>
        </th>
    </tr>
    <tr>
        <td class="tg-0pky">
            {% if advert.field_advert_picture is not empty %}
                <img src="{{ protocol ~ advert.field_advert_picture.0.entity.uri.value|image_style('scaled_90x90') }}" class="templateImage" alt="advertImage" />
            {% else %}
                <img src="{{ protocol ~ 'public://default_images/no_img.png'|image_style('scaled_90x90') }}" class="templateImage" alt="noImage" />
            {% endif %}
        </td>
        <td class="tg-0pky">
            <p id="titleId"><a href="{{ drupal_url('node/' ~ advert.id, {absolute: true}) }}">{{ advert.title.value|capitalize }}</a> - Ref: <span>{{ advert.field_advert_reference.value }}</span> - <span>{{ advert.field_advert_price.value }} {{ advert.field_advert_currency.value|upper }}</span>
                <br/>
                {{ advert.field_advert_district.entity.name.value }}, {{ advert.field_advert_sector.value }}<br/>
                {{ advert.field_advert_property_type.value|capitalize }} for {{ advert.field_advert_type.value|capitalize }}</p>
        </td>
    </tr>
    </tbody>
    <tfoot>
    <tr>
        <td class="tg-0pky" colspan="2">
            <p>Best regards, <br>
                {{ drupal_token('site:name') }} <br>
                {{ drupal_token('custom_token:phone') }}</p>
        </td>
    </tr>
    </tfoot>
</table>